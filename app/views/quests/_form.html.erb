<%= form_with(model: quest, class: "contents",  url: create_quest_path(quest), data: { controller: "form", "form-target": "form" }) do |form| %>
  <div class="md:bg-slate-700 bg-opacity-30 rounded-2xl p-3 pt-2 md:p-6 border border-slate-600 border-opacity-40" data-testid="quest-form">
    <!-- Form Header -->
    <div class="flex items-center mb-2 md:mb-6">
      <div class="w-6 h-6 md:w-10 md:h-10 bg-emerald-500 bg-opacity-20 rounded-xl flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
      </div>
      <div>
        <h3 class="text-md md:text-xl font-semibold text-white">Create New Quest</h3>
        <p class="text-slate-400 text-sm">Add a new challenge</p>
      </div>
    </div>
    <!-- Form Input Section -->
    <div class="flex space-x-1.5 md:space-x-4">
      <%= form.text_field :name, 
            placeholder: "Enter your quest description...",
            class: "w-full px-2 py-2 md:px-4 md:py-3 bg-slate-800 bg-opacity-60 border border-slate-600 border-opacity-50 text-white text-base rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:bg-opacity-80 placeholder-slate-400 transition-all duration-200", 
            data: { testid: "quest-form-name", "form-target": "name", "action": "keydown.enter->form#submit" },
            required: true %>
      <%= form.hidden_field :is_done, value: false %>
      <div class="flex justify-end">
        <button 
          type="button"
          data-action="click->form#submit"
          data-testid="quest-form-submit"
          class="group relative px-2 py-2 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-semibold rounded-xl cursor-pointer transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl focus:ring-2 focus:ring-emerald-400 focus:ring-offset-2 focus:ring-offset-slate-800">
          Create
        </button>
      </div>
    </div>
  </div>
<% end %>
