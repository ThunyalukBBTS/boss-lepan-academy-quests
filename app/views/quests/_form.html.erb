<%= form_with(model: quest, class: "contents") do |form| %>
  <div class="md:flex mb-[0.75rem]" data-testid="quest-form">
    <%= form.text_field :name, class:"bg-gray-50 mb-2 md:mb-0 mr-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", data: { testid: "quest-form-name" }, required: true  %>
    <%= form.hidden_field :is_done, value: false %>
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer", data: { testid: "quest-form-submit" } %>
  </div>
<% end %>
