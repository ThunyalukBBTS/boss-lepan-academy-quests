<%= turbo_frame_tag dom_id(quest) do %>
  <div class="group flex items-start justify-between p-2 mb-2 md:p-5 md:mb-3 bg-slate-700 bg-opacity-40 hover:bg-opacity-60 rounded-2xl transition-all duration-300 border border-slate-600 border-opacity-30 hover:border-opacity-50 hover:shadow-lg" data-testid="quest-<%= quest.id %>">
    <div class="flex items-start flex-1 min-w-0">
      <%= form_with model: quest, method: :patch do |f| %>
        <div class="relative ml-1 mr-2 md:mr-5 flex-shrink-0 mt-0.5 md:mt-1">
          <%= f.check_box :is_done,
              checked: quest.is_done, 
              class: "accent-emerald-500 cursor-pointer w-4 h-4 md:w-6 md:h-6 border-2 border-slate-400 rounded-lg bg-slate-700 checked:bg-emerald-500 checked:border-emerald-500 transition-all duration-200 focus:ring-2 focus:ring-emerald-400 focus:ring-offset-2 focus:ring-offset-slate-800", 
              data: { controller: "checkbox", action: "change->checkbox#submit", testid: "quest-checkbox-#{quest.id}" } %>
        </div>
      <% end %>
      <div class="flex items-start flex-1 min-w-0">
        <!-- Quest Name with Full Text Display -->
        <div class="flex-1 min-w-0 pr-2">
          <div class="text-white md:mt-0.5 text-md font-medium md:text-lg md:font-medium <%= quest.is_done ? 'line-through text-slate-400' : '' %> transition-all duration-300 break-words leading-relaxed" data-testid="quest-name-<%= quest.id %>">
            <%= quest.name %>
          </div>
        </div>
      </div>
    </div>
    <!-- Delete Button -->
    <%= link_to quest_path(quest), 
        data: { turbo_method: :delete, testid: "quest-delete-button-#{quest.id}" }, 
        class: "flex-shrink-0 md:ml-4 p-1 md:p-2 text-red-400 hover:text-white hover:bg-red-500 rounded-xl transition-all duration-200 transform scale-90 group-hover:scale-100",
        title: "Delete Quest" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    <% end %>
  </div>
<% end %>
